        		searchPoint = null;
      		}
      		searchPoint = new google.maps.Marker({
      			position: position,
      			map: map,
      			icon: humanicon
    		});
        var add;
    		geocoder.geocode({'location': position}, function(results, status) {
          		if (status === 'OK') {
